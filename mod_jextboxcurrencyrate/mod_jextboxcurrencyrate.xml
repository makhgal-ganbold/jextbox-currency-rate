<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="5.0" client="site" method="upgrade">
	<name>JExtBOX Currency Rate</name>
	<author>Makhgal Ganbold</author>
	<creationDate>2013-08-11</creationDate>
	<copyright>Copyright (C) 2013-2026 Makhgal Ganbold</copyright>
	<license>http://www.gnu.org/licenses/gpl.html</license>
	<authorUrl>https://www.galaa.mn</authorUrl>
	<version>2.0.0</version>
	<description>MOD_JEXTBOXCURRENCYRATE_DESC</description>
	<namespace path="src">Jextbox\Module\JextboxCurrencyRate</namespace>
	<files>
		<folder module="mod_jextboxcurrencyrate">services</folder>
		<folder>src</folder>
		<folder>tmpl</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/mod_jextboxcurrencyrate.ini</language>
		<language tag="en-GB">en-GB/mod_jextboxcurrencyrate.sys.ini</language>
	</languages>
	<updateservers>
		<server type="extension" priority="1" name="JExtBOX Currency Rate - Updates">https://jextbox.com/update/jextboxcurrencyrate.xml</server>
	</updateservers>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="language" type="list" default="0" label="MOD_JEXTBOXCURRENCYRATE_LANGUAGE_LBL" description="MOD_JEXTBOXCURRENCYRATE_LANGUAGE_DSC">
					<option value="0">MOD_JEXTBOXCURRENCYRATE_LANGUAGE_OPTION_MONGOLIAN</option>
					<option value="1">MOD_JEXTBOXCURRENCYRATE_LANGUAGE_OPTION_ENGLISH</option>
				</field>
				<field name="css_style" type="text" default="" filter="raw" label="MOD_JEXTBOXCURRENCYRATE_CSS_LBL" description="MOD_JEXTBOXCURRENCYRATE_CSS_DSC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" class="form-select" validate="moduleLayout" />
				<field name="moduleclass_sfx" type="textarea" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" rows="3" />
				<field name="cache" type="list" label="COM_MODULES_FIELD_CACHING_LABEL" default="1">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field name="cache_time" type="number" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" default="900" filter="integer" />
				<field name="cachemode" type="hidden" default="itemid">
					<option value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
